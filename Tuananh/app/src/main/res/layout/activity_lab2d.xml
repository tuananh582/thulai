<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Lab2d">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin giáo viên"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Mã giáo viên"
        android:textSize="20dp"
        android:gravity="left"
            />
    <EditText
        android:id="@+id/edtMaGV"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Mã GV"
        android:inputType="text"
        android:importantForAutofill="yes"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textSize="20dp"
        android:layout_toStartOf="@+id/edtHoTen"
        android:gravity="left"
        />

    <EditText
        android:id="@+id/edtHoTen"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:hint="Tên giáo viên"
        android:importantForAutofill="yes"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Giới tính"
        android:textColor="#0070FF"
        android:textSize="25dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textSize="15sp"
            />


        <RadioButton
            android:id="@+id/radNu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:textSize="15sp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:textSize="25dp"
        android:textColor="#0070FF"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/chkXemPhim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem phim"/>

        <CheckBox
            android:id="@+id/chkNgheNhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nghe nhạc"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/chkCaHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca hát"/>

        <CheckBox
            android:id="@+id/chkDuLich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Du lịch"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/chkDocSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc sách"/>

        <CheckBox
            android:id="@+id/chkTheDuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể thao"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnHienThi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiển thị"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_marginRight="16dp"/>

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
