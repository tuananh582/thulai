<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8683e6"
    android:orientation="vertical"
    tools:context=".giaodien">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tuan Anh And Friends"
        android:textColor="#b83762"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtmon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hello Friends"
        android:textColorHint="#b83762" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_gravity="center"
        android:rowCount="4">




        <ImageView
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_margin="50dp"
            android:src="@drawable/cat2" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_margin="50dp"
            android:src="@drawable/cat" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_margin="50dp"
            android:src="@drawable/cat3" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_margin="50dp"
            android:src="@drawable/crocodile" />
    </GridLayout>

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#000"

        android:layout_gravity="center"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/jv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Java"
            />
        <RadioButton
            android:id="@+id/c"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="C++"
            />
        <RadioButton
            android:id="@+id/python"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Python"
            />
    </RadioGroup>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhap Nhung Gi Ban Thich"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="Turn  Off or On"
        android:gravity="center"
        android:textColor="#cec9f0"/>
   <ToggleButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:textOn="Bat"
       android:textOff="Tat"
       />


        </LinearLayout>
    </ScrollView>
</LinearLayout>

